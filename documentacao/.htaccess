######################## "Cache" ########################

<IfModule mod_expires.c>
<FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf)$">
ExpiresActive On
ExpiresDefault "access plus 1 month"
</FilesMatch>
</IfModule>

################## "Redirecionamentos" ##################

<IfModule mod_rewrite.c>

#
## "Habilitar o mod_rewrite"
#

RewriteEngine on

#
## "Regras"
#

#
## "condicoes preliminares"
#

RewriteCond %{REQUEST_FILENAME} !-f

#
## "paginas nao encontradas"
#

ErrorDocument 404 /cms-base/documentacao/nao-encontrado.php

#
## "PAGINAS DA DOCUMENTACAO"
#

### pagina inicial
RewriteRule ^$ index.php
RewriteRule ^notas-versao$ notas-versao.php

#
## "diretorios que não devem ser exibidos na documentacao"
#

RewriteRule ^css/$ nao-encontrado.php

</IfModule>